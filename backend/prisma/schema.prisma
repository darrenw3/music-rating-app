generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  googleId  String   @unique
  reviews   Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  userId    String
  trackId   String
  rating    Float
  review    String?


  user User @relation(fields: [userId], references: [id], onDelete: Cascade)


  @@unique([userId, trackId])
}
