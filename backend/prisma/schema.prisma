generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        Int      @id @default(autoincrement())
  googleId  String   @unique
  email     String   @unique
  name      String?
  img       String?
  reviews   Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  spotifyId   String
  rating    Float
  review    String?


  @@unique([userId, spotifyId])
}
